<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BogNMB.UWP.Styles">
    <Style TargetType="Grid" x:Key="RTBNestedGridStyle">
        <Setter Property="Background" Value="{ThemeResource nestedBackground}" />
        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
        <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
    </Style>
    <Style TargetType="Rectangle" x:Key="RTBRectStyle">
        <Setter Property="Width" Value="8"></Setter>
        <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
        <Setter Property="Fill" Value="{ThemeResource SystemAccentColor}"></Setter>
        
    </Style>
</ResourceDictionary>
